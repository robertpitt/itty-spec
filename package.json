{
  "name": "itty-spec",
  "version": "0.1.1",
  "description": "Type-safe contract first itty-router",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "oxfmt src/ examples/ tests/",
    "format:check": "oxfmt --check src/ examples/ tests/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:types": "vitest --typecheck",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky",
    "publish:npm": "pnpm publish --access public"
  },
  "keywords": [
    "itty-router",
    "api",
    "contract",
    "typescript",
    "validation",
    "schema",
    "zod",
    "valibot",
    "cloudflare-workers"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:robertpitt/itty-spec.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.1",
    "husky": "^9.1.7",
    "oxfmt": "^0.17.0",
    "tsdown": "^0.17.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.15",
    "zod": "v4"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "itty-router": "^5"
  }
}
